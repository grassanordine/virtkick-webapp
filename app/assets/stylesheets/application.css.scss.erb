// utility to hide unloaded angular content
[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
display: none !important;
}

.header-padding {
  padding-left: 3.7em;
}

.prototype-alert {
  width: 500px;
  margin: 0 auto;
  margin-top: 15px;
  padding: 10px 20px;
  background-color: #A1CFA5;
  color: #637A64;
  text-align: center;

  a {
    color: inherit;

    &:hover {
      border-bottom: solid 1px !important;
      text-decoration: none;
    }
  }
}

.header.row {
  margin-top: 30px;
  margin-bottom: 20px;
  $header-height: 64px;

  .menu {
    font-size: 14px;
    text-align: left;

    img {
      padding: 18px 17px 14px 15px;
      width: $header-height;
      height: $header-height;
      box-sizing: content-box;
      background-color: $vk-logo-bg-color;
      border-radius: $vk-border-radius;
    }

    p {
      margin-top: 10px;
    }
  }

  @mixin bottom {
    @media(min-width: $screen-md) {
      margin-top: 50px;
    }
  }

  $padding-bottom: 15px;

  .header {
    @include bottom;

    h1 {
      margin-top: 0;
      margin-bottom: 0;

      .oi {
        color: $brand-primary;
        position: relative;
        padding: 0px 17px 0px 0px;
      }
    }
  }

  .action {
    @include bottom;
    margin-top: 36px !important;

    .btn-primary {
      padding-top: 15px;
      padding-bottom: $padding-bottom;
    }
  }
}

@media(max-width: $screen-sm-max) {
  body {
    padding-top: $navbar-height;
  }

  // Can't use @extend inside media query - need to copy .navbar-fixed-top definition
  nav.navbar {
    position: fixed;
    right: 0;
    left: 0;
    z-index: 1030;
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
    border-radius: 0;
    top: 0;

    .navbar-collapse {
      border: 0;
    }

  }

  .navbar-brand {
    padding-top: 10px;
    .pix {
      max-width: 48px;
      max-height: 48px;
      display: inline-block;
    }
  }
}

nav.navbar {
  border: 0 !important;
  background-color: $vk-navbar-bg-color;

  @media(min-width: $grid-float-breakpoint-max) {
    border-radius: $vk-navbar-border-radius;
  }

  @media(min-width: $screen-md) {
    padding-top: 26px;
    padding-bottom: 26px;
  }

  li {
    float: none;
    width: 100%;
    border: 0 !important;
    margin-top: 0 !important;
  }

  span.oi, span.fa {
    font-size: 24px;
    margin-right: 15px;
    padding: 10px;
    display: inline-block;
    position: relative;
    top: 5px;
    border-radius: $vk-navbar-icon-active-border-radius;
  }

  .active span.oi, .active span.fa {
    color: $navbar-default-bg;
    background-color: $brand-primary;
  }
}

h1, h2, h3, h4, h5, h6 {
  i {
    color: $brand-primary;
    padding: 10px;
    display: inline-block;
    margin-right: 5px;
  }
}

h3 {
  font-size: 20px;
}

.field_with_errors {
  // Rails wraps invalid fields with div.field_with_errors. Don't clutter the interface with it.
  display: inline;
}

.mobile-newsletter {
  padding-top: 20px;
  padding-bottom: 10px;
  background-color: $vk-newsletter-bg-color;
}

.newsletter {
  .description {
    font-size: 16px;
  }

  p.result {
    color: $vk-newsletter-result-color;
    margin-top: 5px;
    font-size: 14px;
  }

  a.back {
    margin-top: 20px;
  }

  h3 {
    color: $vk-newsletter-header-color;
  }
}

.nav {
  li a {
    @include transition(background-color, 0.15s);
    &.active {
      @include transition(background-color, 0.15s);
    }
  }
}

.side-menu-wrapper .dropdown {
  display: none;
}

@media (min-width: $screen-md-min) {
  .side-menu-wrapper {
    position: relative;

    // additional left menu margin for bigger resolutions
    #navbar-collapsable {
      padding-left: 15px;
      @include transition(padding-left, 0.2s, ease-in, 0s);
    }

    @media (min-width: $screen-md-min) and (max-width: $screen-md-max) {
      #navbar-collapsable {
        padding-left: 5px !important;
        @include transition(padding-left, 0.2s, ease-in, 0s);
        padding-right: 5px;
      }
    }

    @media (min-width: $screen-lg-min) {
      #navbar-collapsable {
        padding-left: 30px;
        @include transition(padding-left, 0.2s, ease-in, 0s);

      }
    }

    .side-menu {
      width: 100%;
      @include transition(width, 0.2s, ease-in, 0s);
    }

    .dropdown {
      position: absolute;
      display: block;
      top: 0;
      right: 15px;
      opacity: 0;
    }

    &.collapsed {
      #navbar-collapsable {
        padding-left: 15px;
        @include transition(padding-left, 0.2s, ease-in, 0s);

        @media (min-width: $screen-md-min) and (max-width: $screen-md-max) {
          li a {
            span.oi, span.fa {
              margin-right: 5px !important;
            }
          }
        }
      }

      .side-menu {
        z-index: 1;
        padding-top: 0px;
        padding-bottom: 0px;
        display: block;
        width: 100%;
        min-height: 48px;
        @include transition(width, 0.2s, ease-in, 0s);

        ul.nav {
          li {
            display: none;

            a {
              padding-top: 0;
              padding-bottom: 0;
            }
          }

          li:first-child {
            display: block;
          }
        }

        &.expanded {
          ul.nav li {
            @include transition(padding-top, 0.2s, ease-in, 0s);
            @include transition(padding-bottom, 0.2s, ease-in, 0s);
            display: block;

            a {
              padding-top: 7px;
              padding-bottom: 7px;
            }

            &:first-child {
              padding-top: 20px;
              @include transition(padding-top, 0.2s, ease-in, 0s);
            }

            &:last-child {
              padding-bottom: 20px;
              @include transition(padding-bottom, 0.2s, ease-in, 0s);
            }
          }
        }
      }

      .dropdown {
        z-index: 2;
        position: absolute;
        display: block;
        width: 50px;
        opacity: 1;
        @include transition(opacity, 0.2s, ease-in, 0s);

        .btn {
          padding: 11px 12px;
          width: 100%;
        }
      }

      .desktop-newsletter {
        display: none;
      }
    }
  }
}

