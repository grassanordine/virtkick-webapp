// for UI bootstrap
// https://github.com/angular-ui/bootstrap/pull/1932#issuecomment-41919833
// https://github.com/angular-ui/bootstrap/commit/8620aedba99b05822311c4529a7877e6f62754d6
.nav, .pagination, .carousel a {
  cursor: pointer;
}

[ui-view] {
  position: absolute;
  left: 0;
  right: 0;
}

[ui-view], .fade-ng-switch {
  &.ng-enter, &.ng-leave {
    position: absolute;
    left: 0;
    right: 0;
    @include transition(all .5s ease-in-out);
  }
  &.ng-enter {
    opacity: 0;
  }
  &.ng-enter-active {
    opacity: 1;
  }
  &.ng-leave {
    opacity: 1;
  }
  &.ng-leave-active {
    opacity: 0;
  }
}

[ui-view='console'], .fade-ng-show {
  opacity: 1;
  &.ng-hide-add,
  &.ng-hide-remove {
    @include transition(all .5s ease-in-out);
  }
  &.ng-hide {
    opacity: 0;
  }
}

